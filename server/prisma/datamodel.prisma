type User {
  id: ID! @id
  role: Role!
  firstName: String!
  lastName: String!
  email: String!
  phone: Int
  address: String
  city: String
  zipCode: Int
  bio: String
}

type Work {
  id: ID! @id
  title: String!
  organization: String!
  description: String
  skills: [String!]! @scalarList(strategy: RELATION)
  softwares: [String!]! @scalarList(strategy: RELATION)
}

enum Role {
  ADMIN
  USER
}
